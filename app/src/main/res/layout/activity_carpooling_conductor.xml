<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo2"
    tools:context=".viajeEmpleados.ViajeEmpleadosConductor">

    <!-- Agrega aquí la etiqueta de inicio para ScrollView -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonAmigo"
        app:layout_constraintVertical_bias="0.578"
        tools:ignore="NotSibling">

        <!-- Icono de "estrellas" -->
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="10dp"
            android:src="@mipmap/empleados" />

        <!-- Botón para "Viaje con empleado" -->
        <Button
            android:id="@+id/botonEmpleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="Viaje de empleados"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.921">

        <!-- Icono de "amistad" -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/amistad" />

        <!-- Botón para "Viaje con amigo" -->
        <Button
            android:id="@+id/botonAmigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="Viaje de amigos"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:context=".viajeAmigos.ViajeAmigosConductor"/>
    </LinearLayout>
    <!-- Agrega aquí la etiqueta de cierre para ScrollView -->

</androidx.constraintlayout.widget.ConstraintLayout>
